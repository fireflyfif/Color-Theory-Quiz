                android:text="@string/q1" />

            <LinearLayout style="@style/linearLayout_horizontal">

                <LinearLayout style="@style/LinearLayout_vertical">

                    <CheckBox
                        android:id="@+id/checkBox_1"
                        style="@style/checkBox"
                        android:drawableLeft="@drawable/blue" />

                    <CheckBox
                        android:id="@+id/checkBox_2"
                        style="@style/checkBox"
                        android:drawableLeft="@drawable/green" />

                    <CheckBox
                        android:id="@+id/checkBox_3"
                        style="@style/checkBox"
                        android:drawableLeft="@drawable/yellow" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayout_vertical">

                    <CheckBox
                        android:id="@+id/checkBox_4"
                        style="@style/checkBox"
                        android:drawableLeft="@drawable/purple" />

                    <CheckBox
                        android:id="@+id/checkBox_5"
                        style="@style/checkBox"
                        android:drawableLeft="@drawable/red" />

                    <CheckBox
                        android:id="@+id/checkBox_6"
                        style="@style/checkBox"
                        android:drawableLeft="@drawable/orange" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/buttons_LinearLayout">

                <Button
                    style="@style/AppTheme.ButtonStyle.Back"
                    android:onClick="buttonBack"
                    android:text="@string/button_back"
                    android:visibility="invisible" />

                <Button
                    style="@style/AppTheme.ButtonStyle.Next"
                    android:onClick="buttonNext"
                    android:text="@string/button_next" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

