    <android.support.v7.widget.CardView
        android:id="@+id/cardView_1"
        style="@style/CardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
